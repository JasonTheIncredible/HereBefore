<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>

            <!-- outer stroke-->
            <item>
                <shape android:shape="oval">
                    <padding
                        android:bottom="3px"
                        android:left="3px"
                        android:right="3px"
                        android:top="3px" />
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                    <stroke
                        android:width="3px"
                        android:color="#ffff00" />
                </shape>
            </item>

            <!-- outer circle -->
            <item>
                <shape android:shape="oval">
                    <padding
                        android:bottom="7dp"
                        android:left="7dp"
                        android:right="7dp"
                        android:top="7dp" />
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                    <stroke
                        android:width="7dp"
                        android:color="#4dffd700" />
                </shape>
            </item>

            <!-- inner stroke -->
            <item>
                <shape android:shape="oval">
                    <padding
                        android:bottom="3px"
                        android:left="3px"
                        android:right="3px"
                        android:top="3px" />
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                    <stroke
                        android:width="3px"
                        android:color="#ffff00" />
                </shape>
            </item>

            <!-- inner circle -->
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="1dp"
                        android:height="1dp" />
                    <solid android:color="#b3ffd700" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>

            <!-- outer stroke-->
            <item>
                <shape android:shape="oval">
                    <padding
                        android:bottom="3px"
                        android:left="3px"
                        android:right="3px"
                        android:top="3px" />
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                    <stroke
                        android:width="3px"
                        android:color="#ffff00" />
                </shape>
            </item>

            <!-- outer circle -->
            <item>
                <shape android:shape="oval">
                    <padding
                        android:bottom="7dp"
                        android:left="7dp"
                        android:right="7dp"
                        android:top="7dp" />
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                    <stroke
                        android:width="7dp"
                        android:color="#4db4a000" />
                </shape>
            </item>

            <!-- inner stroke -->
            <item>
                <shape android:shape="oval">
                    <padding
                        android:bottom="3px"
                        android:left="3px"
                        android:right="3px"
                        android:top="3px" />
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                    <stroke
                        android:width="3px"
                        android:color="#ffff00" />
                </shape>
            </item>

            <!-- inner circle -->
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="1dp"
                        android:height="1dp" />
                    <solid android:color="#ffffff00" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>