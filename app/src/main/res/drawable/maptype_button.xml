<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#F5F5F5"
                android:endColor="#008000"
                android:angle="270" />
            <size
                android:width="40dp"
                android:height="40dp" />
            <stroke
                android:width="1dp"
                android:color="#008000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#D3D3D3"
                android:endColor="#005E00"
                android:angle="270" />
            <size
                android:width="40dp"
                android:height="40dp" />
            <stroke
                android:width="1dp"
                android:color="#008000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>