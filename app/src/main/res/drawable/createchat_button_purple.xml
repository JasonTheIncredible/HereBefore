<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>

            <!-- outer stroke-->
            <item>
                <shape android:shape="oval">
                    <size android:width="40dp" android:height="40dp" />
                    <stroke android:width="2dp" android:color="#FFFF00FF" />
                </shape>
            </item>

            <!-- outer circle -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#80FF00FF" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>

            <!-- outer stroke-->
            <item>
                <shape android:shape="oval">
                    <size android:width="40dp" android:height="40dp" />
                    <stroke android:width="2dp" android:color="#FFCC00CC" />
                </shape>
            </item>

            <!-- outer circle -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#80CC00CC" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>