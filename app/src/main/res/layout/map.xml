<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map" >

    <fragment
        android:id="@+id/activity_maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/mapTypeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/maptype_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp" />

    <Button
        android:id="@+id/chatViewsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/chatviews_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <Button
        android:id="@+id/createChatButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/point_button"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/chatSizeSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:progress="0"
        android:max="200"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/createChatButton"
        android:layout_toRightOf="@+id/createChatButton" />

</RelativeLayout>